<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">New Item</h1>
        <div style="width: 30%;margin: 25px auto">
            <form action="/items" method="POST"  enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="item[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label for="Brand">Brand:</label>
                    <select name="item[brand]">
                        <option selected hidden disabled>Brand</option>
                        <option >Nike</option>
                        <option >Adidas</option>
                        <option >Other..</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Type">Type:</label>
                    <select name="item[type]">
                        <option selected hidden disabled>Type</option>
                        <option >Accesory</option>
                        <option >Pants</option>
                        <option >Shirt</option>
                        <option >Shoes</option>
                    </select>
                </div>
                <label for="Size">Size:</label>
                    <select name="item[size]">
                        <option selected hidden disabled>Filter Size</option>
                        <option >Irrelevant</option>
                        <option >XS</option>
                        <option >S</option>
                        <option >M</option>
                        <option >L</option>
                        <option >XL</option>
                        <option >XXL</option>
                    </select>
                <div class="form-group">
                    <input class="form-control" type="number" name="item[price]" placeholder="price" min="0.01" step="0.01">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="item[description]" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">SUBMIT!</button>
                </div>
            </form>
            <a href="/items/index">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>